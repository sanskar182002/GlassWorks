<%layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Add Product</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/glasss" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="glass[title]" id="title" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control mb-3" type="text" id="address" placeholder="Street Address"name="glass[address]" required>
                <input class="form-control" type="text" name="glass[location]" id="location" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <div class="custom-file">
                  <label for="image" class="form-label">Add Image(s)</label>
                  <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Product Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">Rs</span>
                    <input type="text" class="form-control" id="price" placeholder="0" aria-describedby="price-label" name="glass[price]" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="glass[description]" id="description" required></textarea>
                <div class="valid-feedback">Looks Good!</div>
            </div>
           
           <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="tex t" name="glass[image]" id="image" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>-->
            <div class="mb-3">
               <button class="btn btn-success">Submit</button>
            </div>
        </form>
        <a href="/glasss">ALL glass products</a>
    </div>
</div>

